
@{
    ViewBag.Title = "HienThiDSSinhVien";
}

<div class="form-group">
    <form action="/Home/StudentByID" method="get">
        <input type="text" name="StudentID" placeholder="Nhập Student ID" class="form-control" />
        <input type="submit" name="btnSearch" value="Search" class="btn btn-primary" />
    </form>
</div>
<table class="table table-bordered">
    <caption style="font-size:3em;">Danh sách sinh viên</caption>
    <tr>
        <th>ID</th>
        <th>Name</th>
        <th>Class</th>
        <th>Address</th>
    </tr>
    @foreach (var item in ViewBag.Students)
    {
        <tr>
            <td>@item.StudentID</td>
            <td>@item.StudentName</td>
            <td>@item.ClassName</td>
            <td>@item.Address</td>
        </tr>
    }
</table>
